<view class='weather-day-container'>
  <view class="left">
   <image class="thumb" src="{{thumb}}"></image>
  </view>
  <view class="right">
    <text class='item date'>{{weather.date}}</text>
    <text class='item temperature'>气温：{{weather.low}}℃-{{weather.high}}℃</text>
    <text class='item text_day'>白天：{{weather.text_day}}</text>
    <text class='item text_night'>夜晚：{{weather.text_night}}</text> 
  </view>
</view>

